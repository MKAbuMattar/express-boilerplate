{
  "name": "@mkabumattar/express-boilerplate",
  "description": "A boilerplate for Express.js with TypeScript",
  "type": "commonjs",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Mohammad Abu Mattar",
    "email": "mohammad.khaled@outlook.com",
    "url": "https://mkabumattar.github.io/"
  },
  "homepage": "https://github.com/MKAbuMattar/express-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MKAbuMattar/express-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/MKAbuMattar/express-boilerplate/issues"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/bin/www.ts",
    "build": "rimraf dist && tsup --tsconfig tsconfig.json",
    "start": "node ./dist/bin/www.mjs",
    "clean": "rimraf dist coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "fmt": "prettier --config prettier.config.mjs --check ./src",
    "fmt:fix": "prettier --config prettier.config.mjs --write ./src",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.1.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "envalid": "8.0.0",
    "express": "4.19.2",
    "helmet": "7.1.0",
    "http-status-codes": "2.3.0",
    "pino": "9.3.2",
    "pino-http": "10.2.0",
    "pino-pretty": "11.2.2",
    "swagger-ui-express": "5.0.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.8.0",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "22.2.0",
    "@types/supertest": "6.0.2",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "@typescript-eslint/parser": "8.0.1",
    "@vitest/coverage-v8": "2.0.5",
    "eslint": "9.8.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "15.9.0",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "terser": "5.31.5",
    "tsup": "8.2.4",
    "tsx": "4.16.5",
    "typescript": "5.5.4",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.0.5"
  },
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "pnpm@9.6.0"
}
